using ConsoleApp12;

namespace ConsoleApp12
{
    public static class StringExtensions
    {
        public static bool IsPalindrome(this string input)
        {
            if (string.IsNullOrWhiteSpace(input))
                return false;
            string cleaned = new string(input.Where(char.IsLetterOrDigit).Select(char.ToLower).ToArray());
            return cleaned.SequenceEqual(cleaned.Reverse());
        }
    }
    public static class EncryptionExtension
    {
        public static string Encrypt(this string input, int key)
        {
            if (string.IsNullOrEmpty(input))
                return input;
            char[] encryptedChars = input.Select(ch => (char)(ch + key)).ToArray();
            return new string(encryptedChars);
        }
    }

}
internal class Program
{
    static void Main(string[] args)
    {
        /*Завдання 1:
Створити метод розширення для класу String, який буде перевіряти чи рядок є паліндром.
Завдання 2:
Створити метод розширення для класу String, який буде шифрувати рядок використовуючи ключ (передається в параметри). Шифрування відбувається шляхом здвигу символа по в таблиці ASCII.
Привіт – 3
Сткдкф
Завдання 3:
Створити метод розширення для класу Array, який буде знаходити кількість однакових елементів в масиві.*/
        string text = "Привіт тівирп";
        Console.WriteLine(text.IsPalindrome());
        string text2 = "Привіт";
        string p = text2.Encrypt(3);
        Console.WriteLine(p);
    }
}

