namespace ConsoleApp20
{
    class Abonent
    {

        public string Name { get; set; }
        public string SurName { get; set; }
        public string LastName { get; set; }
    }
    class PhoneBook
    {
        Dictionary<string,Abonent> keyValuePairs = new Dictionary<string, Abonent>();
        public void AddContact(string phoneNumber, Abonent a)
        {
            if (!keyValuePairs.ContainsKey(phoneNumber))
            {
                keyValuePairs.Add(phoneNumber, a);
            }
            else
            {
                Console.WriteLine(" Key was found ");
            }
        }
        public void RemoveContact(string phoneNumber)
        {
            keyValuePairs.Remove(phoneNumber);
        }
        public Abonent SearchContact(string phoneNumber)
        {
            if (keyValuePairs.ContainsKey(phoneNumber))
            {
                return keyValuePairs[phoneNumber];
            }
            else
            {
                Console.WriteLine(" Key was not found "); return null;
            }
        }
        public void Change()
        {

        }
    }

    internal class Program
    {
        static void Main(string[] args)
        {
            /*Завдання 1:
Реалізувати клас PhoneBook на базі дженерік колекції 
Dictionary<TKey, TValue>, 
передбачити додавання, зміну, пошук та видалення записів.*/
        }
    }
}






















namespace ConsoleApp13
{
    class Abonent
    {

        public string Name { get; set; }
        public string SurName { get; set; }
        public string LastName { get; set; }
    }
    class PhoneBook
    {
        Dictionary<string, Abonent> keyValuePairs = new Dictionary<string, Abonent>();
        public void AddContact(string phoneNumber, Abonent a)
        {
            if (!keyValuePairs.ContainsKey(phoneNumber))
            {
                keyValuePairs.Add(phoneNumber, a);
            }
            else
            {
                Console.WriteLine(" Key was found ");
            }
        }
        public void RemoveContact(string phoneNumber)
        {
            keyValuePairs.Remove(phoneNumber);
        }
        public Abonent SearchContact(string phoneNumber)
        {
            if (keyValuePairs.ContainsKey(phoneNumber))
            {
                return keyValuePairs[phoneNumber];
            }
            else
            {
                Console.WriteLine(" Key was not found "); return null;
            }
        }
        public void Change()
        {

        }
    }


    internal class Program
    {
        static void Main(string[] args)
        {
            string text = @"Ось будинок, який збудував Джек. А це пшениця, яка
у темній коморі зберігається у будинку, який збудував
Джек. А це веселий птах-синиця, який часто краде
пшеницю, яка в темній коморі зберігається у будинку,
який збудував Джек.";
            var words = text.ToLower().Replace("\n", " ").Replace("\r", " ").Split([' ', ',', '.', '-', '—', '!', '?', ';', ':', '«', '»'], StringSplitOptions.RemoveEmptyEntries);
            var wordStats = new Dictionary<string, int>();
            foreach (var word in words)
            {
                if (wordStats.ContainsKey(word))
                    wordStats[word]++;
                else
                    wordStats[word] = 1;
            }
            Console.WriteLine("{0,-20} {1,5}", "Word", "Count");
            Console.WriteLine(new string('-', 27));
            foreach (var pair in wordStats)
            {
                Console.WriteLine("{0,-20} {1,5}", pair.Key, pair.Value);
            }
        }
        /*Завдання 1:
Реалізувати клас PhoneBook на базі дженерік колекції 
Dictionary<TKey, TValue>, 
передбачити додавання, зміну, пошук та видалення записів.Завдання 2***. Програма «Статистика»
Підрахувати, скільки разів кожне слово зустрічається у заданому
текстi. Результат записати до колекції Dictionary<
TKey, TValue>. Тексt використовувати із додатка 1.
Вивести статистику за текстом у вигляді таблиці (рис. 1).
Додаток 1.
Ось будинок, який збудував Джек. А це пшениця, яка
у темній коморі зберігається у будинку, який збудував
Джек. А це веселий птах-синиця, який часто краде
пшеницю, яка в темній коморі зберігається у будинку,
який збудував Джек.*/

    }
}
