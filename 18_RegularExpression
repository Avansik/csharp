using System.Text.RegularExpressions;
using System.Globalization;

class Program
{
    static void Main()
    {
        Console.Write("Enter file path: ");
        string filePath = Console.ReadLine();

        if (!File.Exists(filePath))
        {
            Console.WriteLine("File not found.");
            return;
        }

        string content = File.ReadAllText(filePath);

        // Matches numbers with decimal part (dot or comma)
        Regex regex = new Regex(@"\b\d+[.,]\d+\b");
        MatchCollection matches = regex.Matches(content);

        List<double> fractionalNumbers = new List<double>();

        foreach (Match match in matches)
        {
            // Normalize to dot for parsing
            string normalized = match.Value.Replace(',', '.');

            if (double.TryParse(normalized, NumberStyles.Any, CultureInfo.InvariantCulture, out double number))
            {
                fractionalNumbers.Add(number);
            }
        }

        if (fractionalNumbers.Count > 0)
        {
            Console.WriteLine("Found fractional numbers:");
            foreach (double number in fractionalNumbers)
            {
                Console.WriteLine(number);
            }
        }
        else
        {
            Console.WriteLine("No fractional numbers found.");
        }
    }
}
